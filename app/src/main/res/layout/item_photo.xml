<?xml version="1.0" encoding="utf-8"?>
<com.megashot.onlinephotoeditor.piceditor.texteditor.imageeditor.picker.widget.SquareItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardColorDarkContent">

    <ImageView
        android:id="@+id/image_view_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@color/cardColorDarkContent"
        android:clickable="true"
        android:focusable="true"
        android:padding="1dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/image_view_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:focusable="true"
        android:padding="20dp" />
</com.megashot.onlinephotoeditor.piceditor.texteditor.imageeditor.picker.widget.SquareItemLayout>
